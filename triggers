DELIMITER //
CREATE TRIGGER GeneraMissatges
AFTER INSERT ON contingut
FOR EACH ROW
BEGIN
	call procGeneraMissatges(NEW.nomCat);
END;

DELIMITER //
CREATE PROCEDURE procGeneraMissatges(IN IdContingut INT)
BEGIN
    SELECT * FROM categoriafavorits JOIN contingut ON categoriafavorits.nomCat=contingut.nomCat;

END;


SELECT * FROM categoriafavorits JOIN contracte ON categoriafavorits.IdContracte=contracte.IdContracte and categoriafavorits.nomCat="Animaci√≥n";